<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#120E4C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/signo"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:hint="Mensaje personalizado"
        android:textColor="#CDCDCD"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#797ABC"
        android:text="Enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signo" />

    <EditText
        android:id="@+id/opcion"
        android:layout_width="216dp"
        android:layout_height="47dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Ingrese su Signo Zodiacal"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>